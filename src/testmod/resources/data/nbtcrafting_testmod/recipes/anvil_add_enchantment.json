{
	"type": "nbtcrafting:anvil",
	"base": {
		"item": "minecraft:bow",
		"data": {
			"conditions": [
				"!$?.Enchantments || filter($.Enchantments, e -> e.id == 'minecraft:punch')[0]?.lvl < 5"
			]
		}
	},
	"ingredient": {
		"item": "minecraft:iron_ingot"
	},
	"result": {
		"item": "minecraft:bow",
		"data": {
			"$": [
				{
					"value": "base",
					"paths": {
						"Enchantments": "$ distinct(combine(base, addition), e -> e.id)"
					}
				}
			],
			"Enchantments": [
				{
					"id": "minecraft:punch",
					"lvl": "$ filter(base.Enchantments, e -> e.id == 'minecraft:punch')[0]?.lvl + 1"
				}
			]
		}
	},
	"levels": 3
}
